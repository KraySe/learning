  "version": "0.2.0",
  "configurations": [
    {
      "name": "Typescript",
      "request": "launch",
      "type": "node",
      "program": "${workspaceFolder}/${relativeFile}",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "smartStep": true,
      "runtimeExecutable": "deno",
      "preLaunchTask": "Yarn build",
      "outFiles": ["${workspaceFolder/dist/**/*.js"],
      "runtimeArgs": ["run", "--inspect", "--allow-all"]
    }
  ]
}
